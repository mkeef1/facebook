extends ../shared/template
block content
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= person.email
      h5= person.tagline
  .row
    .col-xs--2
      a.thumbnail(href='#')
        img(src=person.photo)
    .col-xs-10
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Facebook
            th Twitter
            th Visible
        tbody
            tr
              td= person.email
              td= person.phone
              td: a(href=person.facebook, target='_blank')= person.facebook
              td: a(href=person.twitter, target='_blank')= person.twitter

  .row
    .col-xs-4
      form(role='form', method='post', action='/message/#{person._id}')
        .radio
          label
            input(type='radio', name='mtype', value='public' checked=true)
            span Text
        .radio
          label
            input(type='radio', name='mtype', value='private' checked=false)
            span Email
        .radio
          label
            input(type='radio', name='mtype', value='private' checked=false)
            span Internal
        .form-group
          label(for='message') Message
          textarea.form-control#message(name='message')
        button.btn.btn-primary(type='submit') Send Message
    .col-xs-8

block scripts

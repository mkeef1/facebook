extends ../shared/template
block content
  table.table.table-striped.table-hover.table-bordered
    thead
      tr
        th Email
        th Phone
        th Facebook
        th Twitter
    tbody
      each user in users
        tr
          td: A(href='/users/#{user.email}')= user.email
          td= user.phone
          td: a(href=user.facebook, target='_blank')= user.facebook
          td: a(href=user.twitter, target='_blank')= user.twitter
block scripts

